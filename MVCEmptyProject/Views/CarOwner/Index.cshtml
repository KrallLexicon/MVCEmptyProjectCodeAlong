@model CarOwner
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form asp-action="CreateCarOwner" method="post">
    <div class="form-group">
        <label asp-for="CarRegNumber" class="control-label"></label>
        <select asp-for="CarRegNumber" class="form-control" asp-items="ViewBag.RegNumber"></select>
    </div>
    <div class="form-group">
        <label asp-for="OwnerId" class="control-label"></label>
        <select asp-for="OwnerId" class="form-control" asp-items="ViewBag.PersonId"></select>
    </div>
    <input type="submit" value="Create" class="btn btn-primary" />
</form>