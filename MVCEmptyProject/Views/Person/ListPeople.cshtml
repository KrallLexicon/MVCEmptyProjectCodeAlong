@model IEnumerable<Person>
@{
    ViewData["Title"] = "ListPeople";
}

<h1>ListPeople</h1>

<a asp-action="AddPerson">Create</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Age</th>
            <th>City</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Age</td>
            <td>@item.City</td>
            <td><a asp-action="DeletePerson" asp-route-id=@item.Id>Delete</a></td>
        </tr>
}

    </tbody>
</table>